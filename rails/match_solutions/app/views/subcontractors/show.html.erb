<section class="license section">
    <div class="container">
        <div class="license-inner">
            <h2 class="title text-center">Company Details</h2>
            <div class="info">
                <div class="row">
				  	<div class="col-md-6 col-md-offset-3">
							<% if notice %>
								<div class="alert alert-dismissable alert-info">
								  <button type="button" class="close" data-dismiss="alert">Ã—</button>
									<%= notice %>
								</div>
							<% end %>

							<p>
							  <strong>Name:</strong>
							  <%= @subcontractor.name %>
							</p>

							<p>
							  <strong>Website</strong>
							  <%= link_to "#{@subcontractor.link}", url_for(@subcontractor.link) %>
							</p>

							<p>
							  <strong>Description:</strong>
							  <%= @subcontractor.description %>
							</p>
							<p>
							  <strong>Skills</strong>
							  <%= @subcontractor.skills %>
							</p>

							<p>
							  <strong>Capacity</strong>
							  <%= @subcontractor.company_size %>
							</p>
							<p>
							  <strong>Location:</strong>
							  <%= @subcontractor.location %>
							</p>


							<%= link_to 'Edit', edit_subcontractor_path(@subcontractor) %> |
							<%= link_to 'Back', user_show_path(@user) %>
						</div>

					</div>
	            </div>
	        </div>
	    </div>
	</div>
</section>

