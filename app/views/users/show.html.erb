<section class="license section">
    <div class="container">
        <div class="license-inner">
            <h2 class="title text-center">Profile Details</h2>
            <div class="info">
                <div class="row">
				  	<div class="col-md-6 col-md-offset-3">
							<% if notice %>
								<div class="alert alert-dismissable alert-info">
								  <button type="button" class="close" data-dismiss="alert">Ã—</button>
									<%= notice %>
								</div>
							<% end %>
							<p>
							  <strong>Email:</strong>
							  <%= @user.email %>
							</p>
							<p>
							  <strong>Member since</strong>
							  <%= @user.created_at.strftime("%m-%d-%Y") %>
							</p>

							<p>
								<% if @user.subcontractor != nil %>
									<strong>Company:</strong> <%= link_to @user.subcontractor.name, @user.subcontractor %>
								<% end %>
							</p>

							<% if @proj_count > 0 %>
								<% all_projects_heading = "#{pluralize(@proj_count,'project')}" %>
								You have submitted <%= link_to all_projects_heading, projects_path %> so far
								<ul>
								<% @user.projects.each do |p| %>
								 <li>
									 <%= link_to  p.description[0..30] + "...", p %> 
								 </li>
								<% end %>
								</ul>
							<% end %>
							<%= link_to "Submit a new project", :controller => :projects, :action => :new %>

					</div>
	            </div>
	        </div>
	    </div>
	</div>
</section>

