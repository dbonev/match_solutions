<!DOCTYPE html>
<html>
<head>
  <title>MatchSolutions</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<h1>Outsourcing Heaven</h1>
	<div class="container">
		<div id="navbar" class="navbar-header">
		<div class="navbar-collapse">
			<%= link_to "home", pages_path %>
			<%= link_to "faq", :controller => :pages, :action => :faq %>
			<% if @current_user %>
				<% user_email = @current_user.email %>
				Logged in as <%= link_to user_email, user_path %> <%= link_to "logout", :controller => :sessions, :action => :destroy %>
			<% else %>
				<%= link_to "login", login_path(:rurl => request.original_url) %>
			<% end %>		
		</div>
		</div>
	</div>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
